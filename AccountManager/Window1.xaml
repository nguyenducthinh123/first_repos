<Window x:Class="AccountManager.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountManager"
        mc:Ignorable="d"
        Title="Account: admin" Height="450" Width="800">
    <Grid>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="282" Margin="10,10,0,0" VerticalAlignment="Top" Width="493">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="PHẦN MỀM QUẢN LÍ THIÊN TAI, NƯỚC SẠCH VÀ VỆ SINH MÔI TRƯỜNG NÔNG THÔN"  DisplayMemberBinding="{Binding Path=Name}" Width="480"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel HorizontalAlignment="Center" Margin="0,350,0,0">
            <Button x:Name="btnLogout" Width="120" Content="Log out" Click="btnLogout_Click" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
